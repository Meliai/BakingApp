<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/mCardView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/image_protection">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_recipe_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_cake"
            android:contentDescription="@string/cd_image_recipe"
            android:layout_margin="@dimen/space2"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/text_size_16"
            >
        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_20"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_recipe_servings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textStyle="italic"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_16"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>