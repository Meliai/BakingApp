<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/mCardView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<TextView
    android:id="@+id/title_ingredients"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/ingredients"
    android:textColor="@color/colorGrey"
    android:textSize="@dimen/text_size_16"
    android:layout_margin="@dimen/space16"/>
    <TextView
        android:id="@+id/tv_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingredients"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/colorBlack"
        android:background="@drawable/view_with_pink_boarders"
        android:layout_marginLeft="@dimen/space16"
        android:layout_marginRight="@dimen/space16"
        android:layout_marginBottom="@dimen/space16"
        android:padding="@dimen/space8"/>
    </LinearLayout>
</android.support.v7.widget.CardView>